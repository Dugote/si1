<?xml version="1.0" encoding="UTF-8"?>

<project name="lab1" basedir="." default="compila">

    <property name="classes" location="classes"/>

    <target name="dir">
        <mkdir dir="classes" />
    </target>

    <target name="compilar" depends="dir">
        <javac srcdir="${basedir}"
        destdir="${classes}" />
    </target>

</project>